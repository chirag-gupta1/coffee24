<%- include('partials/header') %>

<section class="page-container">
  <div class="page-header">
    <h2 class="page-title">Edit Machine</h2>
  </div>

  <div class="machine-form-card">
    <form method="post" action="/machine/<%= machine._id %>/edit" class="machine-form">

      <div class="form-row">
        <label>Machine Code</label>
        <input type="text" name="code" value="<%= machine.code %>" required>
      </div>

      <div class="form-row">
        <label>Model</label>
        <input type="text" name="model" value="<%= machine.model %>" required>
      </div>

      <div class="form-row">
        <label>Location</label>
        <input type="text" name="location" value="<%= machine.location %>" required>
      </div>

      <hr class="form-divider">

      <h3 class="section-subtitle">‚öôÔ∏è Ingredients</h3>

      <div id="ingredient-list" class="ingredient-container">
        <% 
          const defaultIngredients = [
            { name: 'Coffee Beans', quantity: 0 },
            { name: 'Sugar', quantity: 0 },
            { name: 'Milk', quantity: 0 },
            { name: 'Chocolate Syrup', quantity: 0 },
            { name: 'Water', quantity: 0 }
          ];
          const ingredientsToShow = machine.ingredients && machine.ingredients.length > 0 
            ? machine.ingredients 
            : defaultIngredients;
        %>
        <% ingredientsToShow.forEach((ing, index) => { %>
          <div class="ingredient-card">
            <div class="ingredient-fields">
              <input type="text" name="ingredients[<%= index %>][name]" value="<%= ing.name %>" placeholder="Ingredient name" required>
              <input type="number" name="ingredients[<%= index %>][quantity]" value="<%= ing.quantity %>" placeholder="Quantity" step="any" required>
            </div>
            <button type="button" class="btn-icon" onclick="removeIngredient(this)" title="Delete Ingredient">üóë</button>
          </div>
        <% }) %>
      </div>

      <div class="action-row">
        <button type="button" class="btn-secondary" onclick="addIngredient()">+ Add Ingredient</button>
      </div>

      <div class="action-buttons">
        <button type="submit" class="btn-primary">üíæ Save Changes</button>
        <button type="button" class="btn-secondary" onclick="window.history.back()">‚Ü© Cancel</button>
        <form action="/machines/delete/<%= machine._id %>" method="POST" style="display:inline;">
          <button type="submit" class="btn-danger">üóë Delete</button>
        </form>
      </div>

    </form>
  </div>
</section>

<script>
  function addIngredient() {
    const container = document.getElementById('ingredient-list');
    const index = container.children.length;
    const div = document.createElement('div');
    div.className = 'ingredient-card';
    div.innerHTML = `
      <div class="ingredient-fields">
        <input type="text" name="ingredients[${index}][name]" placeholder="Ingredient name" required>
        <input type="number" name="ingredients[${index}][quantity]" placeholder="Quantity" step="any" required>
      </div>
      <button type="button" class="btn-icon" onclick="removeIngredient(this)">üóë</button>
    `;
    container.appendChild(div);
  }

  function removeIngredient(button) {
    button.parentElement.remove();
  }
</script>

<style>
