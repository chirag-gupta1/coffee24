<%- include('partials/header') %>

<section class="page-container">
  <div class="page-header">
    <h2 class="page-title">+ Add New Machine</h2>
  </div>

  <div class="machine-form-card">
    <form method="post" action="/machine/new" class="machine-form">
      <div class="form-row">
        <label>Machine Code</label>
        <input type="text" name="code" placeholder="Enter code (e.g., 101)" required>
      </div>

      <div class="form-row">
        <label>Model</label>
        <input type="text" name="model" placeholder="Enter model name" required>
      </div>

      <div class="form-row">
        <label>Location</label>
        <input type="text" name="location" placeholder="Enter location" required>
      </div>

      <div class="action-row">
        <button type="submit" class="btn-cta">Save Machine</button>
        <a href="/dashboard" class="btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</section>

<style>
  /* Use same font, colors, and spacing as dashboard */
  body {
    background-color: #f3f4f6; /* same as dashboard bg */
    font-family: 'Segoe UI', Roboto, sans-serif;
    color: #222;
  }

  .page-container {
    padding: 40px 80px;
  }

  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 25px;
  }

  .page-title {
    font-size: 1.6rem;
    font-weight: 600;
    color: #333;
  }

  .machine-form-card {
    background: #fff;
    border-radius: 12px;
    padding: 30px 40px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    max-width: 600px;
    margin: auto;
  }

  .machine-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-row {
    display: flex;
    flex-direction: column;
  }

  .form-row label {
    font-weight: 500;
    color: #555;
    margin-bottom: 6px;
  }

  .form-row input {
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 0.95rem;
    transition: border-color 0.2s ease;
  }

  .form-row input:focus {
    border-color: #007bff;
    outline: none;
  }

  .action-row {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 15px;
  }

  .btn-cta {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .btn-cta:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #f0f0f0;
    color: #333;
    text-decoration: none;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .btn-secondary:hover {
    background-color: #e0e0e0;
  }
</style>

<%- include('partials/footer') %>
