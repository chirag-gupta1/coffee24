<%- include('partials/header') %>

<section class="page-container">
  <div class="page-header">
    <h2 class="page-title">+ Add New Machine</h2>
  </div>

  <div class="machine-form-card">
    <form method="post" action="/machine/new" class="machine-form">
      <div class="form-row">
        <label>Machine Code</label>
        <input type="text" name="code" placeholder="Enter code (e.g., 101)" required>
      </div>

      <div class="form-row">
        <label>Model</label>
        <input type="text" name="model" placeholder="Enter model name" required>
      </div>

      <div class="form-row">
        <label>Location</label>
        <input type="text" name="location" placeholder="Enter location" required>
      </div>

      <div class="action-row">
        <button type="submit" class="btn-primary">ðŸ’¾ Save Machine</button>
        <button type="button" class="btn-secondary" onclick="window.history.back()">â†© Cancel</button>
      </div>
    </form>
  </div>
</section>

<style>
  body {
    background-color: #f3f4f6;
    font-family: 'Segoe UI', Roboto, sans-serif;
    color: #222;
  }

  .page-container {
    padding: 20px;
  }

  .machine-form-card {
    background: #fff;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    max-width: 600px;
    margin: auto;
  }

  .form-row {
    display: flex;
    flex-direction: column;
    margin-bottom: 15px;
  }

  .form-row input {
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 0.95rem;
  }

  .action-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 15px;
  }

  .btn-primary,
  .btn-secondary {
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background-color: #2563eb;
    color: #fff;
  }

  .btn-secondary {
    background-color: #e5e7eb;
    color: #111827;
  }

  @media (max-width: 600px) {
    .machine-form-card {
      padding: 20px;
    }
    .form-row input {
      font-size: 0.9rem;
    }
    .btn-primary, .btn-secondary {
      width: 100%;
    }
  }
</style>

<%- include('partials/footer') %>
